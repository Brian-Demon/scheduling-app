<%= form_with(model: shift) do |form| %>
  <% if shift.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(shift.errors.count, "error") %> prohibited this shift from being saved:</h2>

      <ul>
        <% shift.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.collection_select(
      :user_id,
      User.all,
      :id,
      :employee_name,
      prompt: "-- Select Employee --",
    ) %>
  </div>

  <div class="field">
    <%= form.label :schedule_id %>
    <%= form.collection_select(
      :schedule_id,
      Schedule.all,
      :id,
      :schedule_name,
      prompt: "-- Select Schedule --",
    ) %>
  </div>

  <div class="field">
    <%= form.label :start %>
    <%= form.datetime_select :shift_start %>
  </div>

  <div class="field">
    <%= form.label :end %>
    <%= form.datetime_select :shift_end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
